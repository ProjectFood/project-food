  <script src="/path/to/jquery.masonry.min.js"></script>

  <h1><%= @meal.title %></h1>

  <div class='meal-photo'>
  <%= filepicker_image_tag @meal.photo %>
  </div>

  <div class='meal-edit'>
    <%# if @meal.user == current_user %>
      <%= link_to "Edit Meal Details", edit_user_meal_path(@meal.user) %>
    <%# end %>
  </div>

